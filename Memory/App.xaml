<Application x:Class="MemoryMatchGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Ressources globales pour l'application -->
        <ResourceDictionary>
            <!-- Personnalisation de la fenêtre -->
            <Style TargetType="{x:Type Window}" x:Key="CustomWindowStyle">
                <Setter Property="WindowStyle" Value="None"/>
                <Setter Property="ResizeMode" Value="CanResize"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="AllowsTransparency" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Window}">
                            <Border BorderBrush="#352B7B" BorderThickness="1" CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" 
                                                      Opacity="0.6" Color="#000000"/>
                                </Border.Effect>
                                <Grid>
                                    <!-- Fond avec dégradé -->
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8"/>
                                    
                                    <!-- Barre de titre personnalisée -->
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Barre de titre -->
                                        <Border Grid.Row="0" Height="30" 
                                                Background="#20FFFFFF" 
                                                CornerRadius="8,8,0,0" 
                                                MouseLeftButtonDown="Border_MouseLeftButtonDown">
                                            <Grid>
                                                <TextBlock Text="{TemplateBinding Title}" 
                                                           Foreground="#E5B8E8" 
                                                           FontSize="12" 
                                                           VerticalAlignment="Center" 
                                                           HorizontalAlignment="Center"/>
                                                
                                                <!-- Boutons de contrôle de la fenêtre -->
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Right" 
                                                            VerticalAlignment="Center" 
                                                            Margin="0,0,5,0">
                                                    <Button x:Name="MinButton" 
                                                            Width="16" Height="16" 
                                                            Margin="2,0" 
                                                            Content="−" 
                                                            Foreground="White" 
                                                            Background="#353D80" 
                                                            Click="MinimizeButton_Click"
                                                            ToolTip="Minimize">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="8">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                    
                                                    <Button x:Name="CloseButton" 
                                                            Width="16" Height="16" 
                                                            Margin="2,0" 
                                                            Content="×" 
                                                            Foreground="White" 
                                                            Background="#5B4DBC" 
                                                            Click="CloseButton_Click"
                                                            ToolTip="Close">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="8">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- Contenu de la fenêtre -->
                                        <ContentPresenter Grid.Row="1"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>